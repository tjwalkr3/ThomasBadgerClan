<svg viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" style="
    position: absolute;
    width: @(width)%;
    aspect-ratio: 1 / 1;

    top: @(yPercent)%;
    left: @(xPercent)%;
    transform: translate(-50%, -50%);
    fill: @(fill);
  ">
  <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
  <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
  <g id="SVGRepo_iconCarrier">
    <path fill-rule="evenodd"
      d="M8.5.134a1 1 0 0 0-1 0l-6 3.577a1 1 0 0 0-.5.866v6.846a1 1 0 0 0 .5.866l6 3.577a1 1 0 0 0 1 0l6-3.577a1 1 0 0 0 .5-.866V4.577a1 1 0 0 0-.5-.866L8.5.134z">
    </path>
  </g>
</svg>

@code {
  [Parameter]
  public int Row { get; set; }
  [Parameter]
  public int Col { get; set; }
  [Parameter]
  public int Dimension { get; set; }
  private double xPercent;
  private double yPercent;
  double width;

  string fill = "";
  protected override void OnParametersSet()
  {
    @* fill = (Col* Row + Row + Col ) % 2 == 1
    ? "white"
    : "gray"; *@
    fill = "rgba(255, 255, 255, 0.5)";

    width = 100 * 1 / (double)Dimension;


    xPercent = DisplayUtils.CalculateXPercent(Col, Row, Dimension, modHack: true);
    yPercent = DisplayUtils.CalculateYPercent(Row, Dimension);
  }
}