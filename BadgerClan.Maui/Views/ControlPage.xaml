<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BadgerClan.Maui.Views.ControlPage"
             Title="ControlPage">
    <VerticalStackLayout MaximumWidthRequest="800"
                         Spacing="20"
                         Margin="10">
        <Picker Title="Select an option"
                FontSize="24"
                ItemsSource="{Binding ClientList}"
                SelectedItem="{Binding SelectedClient}" />

        <Label Text="{Binding CurrentState, 
                              StringFormat='Current State: {0}'}"
               HorizontalOptions="Center" 
               FontSize="36"
               FontAttributes="Bold" />

        <Button Text="Attack"
                Command="{Binding AttackCommand}"
                FontSize="24" 
                FontAttributes="Bold" />

        <Button Text="Defend"
                Command="{Binding DefendCommand}"
                FontSize="24" 
                FontAttributes="Bold" />

        <Button Text="Scatter"
                Command="{Binding ScatterCommand}"
                FontSize="24" 
                FontAttributes="Bold" />

        <Button Text="Stop"
                Command="{Binding StopCommand}"
                FontSize="24" 
                FontAttributes="Bold" />
    </VerticalStackLayout>
</ContentPage>